<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="NsBoard">
		<select id="SelectListByType" parameterType="Integer" resultType="MyBoard">
			select * from board where brd_type = #{brd_type}
		</select>
		
		<select id="SelectTotalCount" resultType="int">
			select count(*) as cnt from board	
			<if test="mode == 'writer'">
				where mid like #{keyword}
			</if>
			<if test="mode == 'subject'">
				where brd_subject like #{keyword}
			</if>
			<if test="mode == 'content'">
				where brd_content like #{keyword}
			</if>	
		</select>
		
		<select id="SelectDataList" resultType="MyBoard">
			select * from board where brd_type = 1
			<if test="mode == 'writer'">
				and mid like #{keyword}
			</if>
			<if test="mode == 'subject'">
				and brd_subject like #{keyword}
			</if>
			<if test="mode == 'content'">
				and brd_content like #{keyword}
			</if>
	</select>	
	</mapper>
	
	