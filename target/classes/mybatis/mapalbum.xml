<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="NsAlbum">
		<select id="SelectAlbumListByType" resultType="MyAlbum" parameterType="Integer">
			select * from album where alm_type = #{alm_type}			
		</select>
		
		<select id="SelectAlbumListByKeyword" resultType="MyAlbum" parameterType="HashMap">
			select * from album where alm_type = #{alm_type} and upper(alm_name) like upper(#{keyword})
		</select>
		
		<select id="SelectAlbumListBySeq" resultType="MyAlbum" parameterType="Integer">
			select alm_name,alm_image,to_char(alm_releasedate,'yyyy-mm-dd') as alm_releasedate,
			alm_songwriter, alm_gerne
			 from album where seq_alm = #{seq_alm}
		</select>
		
		<select id="SelectSongListBySeq" resultType="MySong" parameterType="Integer">
			select * from song where seq_alm = #{seq_alm}
		</select>
		
		<select id="SelectDesListBySeq" resultType="MyAlde" parameterType="Integer">
			select * from album_description where seq_alm = #{seq_alm}
		</select>
	</mapper>
	
